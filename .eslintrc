{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "files": ["*.js","*.ts","*.tsx"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "no-empty-function": "error",
        "no-empty-pattern": "error",
        "no-multi-spaces": "error",
        "no-multi-str": "error",
        "require-await": "error",
        "array-bracket-spacing": [
          "error",
          "never"
        ],
        "block-spacing": "error",
        "brace-style": "error",
        "comma-spacing": [
          "error",
          {
            "before": false,
            "after": true
          }
        ],
        "comma-style": [
          "error",
          "last"
        ],
        "func-call-spacing": [
          "error",
          "never"
        ],
        "indent": [
          "error",
          2
        ],
        "key-spacing": [
          "error",
          {
            "beforeColon": false
          }
        ],
        "keyword-spacing": [
          "error",
          {
            "before": true
          }
        ],
        "max-depth": [
          "error",
          4
        ],
        "max-len": [
          "error",
          {
            "code": 100,
            "tabWidth": 2
          }
        ],
        "semi": [
          "error",
          "always"
        ],
        "semi-spacing": [
          "error",
          {
            "before": false,
            "after": true
          }
        ],
        "semi-style": [
          "error",
          "last"
        ],
        "no-undef": "off"
      
        }
    }
  ],
  "env": {
    "node": true,
    "browser": true,
    "amd": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ]
}
